@model TadrousManassa.Areas.Student.Models.QuizDetailsDTO

@{
    ViewData["Title"] = "Quiz Details";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white text-center">
                    <h1 class="mb-0">@(!string.IsNullOrEmpty(@Model.Name) ? @Model.Name : "Quiz")</h1>
                </div>
                
                <div class="card-body p-4">
                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <div class="mb-4">
                            <h5 class="text-muted mb-2">Quiz Description:</h5>
                            <p class="lead">@Model.Description</p>
                        </div>
                    }
                    
                    <div class="alert alert-info">
                        <h5 class="alert-heading mb-3">About the Quiz:</h5>
                        <div class="row">
                            <div class="col-md-6">
                                <p class="mb-2">
                                    <strong>Time:</strong>
                                    <span class="badge bg-danger fw-bold fs-6">
                                        @Model.TimeHours hour@(Model.TimeHours > 1 ? "s" : "") @(Model.TimeMinutes > 0 ? $"and {Model.TimeMinutes} minute{(Model.TimeMinutes > 1 ? "s" : "")}" : "")
                                    </span>
                                </p>
                            </div>
                            <div class="col-md-6">
                                <p class="mb-2">
                                    <strong>Number of Remaining Attempts:</strong>
                                    <span class="badge bg-success fs-6">@Model.NumOfRemainingAttempts</span>
                                </p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="text-center mt-4">
                        <a href="@Url.Action("SolveQuiz", "Quiz", new { quizId = Model.Id })"
                           class="btn btn-primary btn-lg px-5 py-3">
                            <i class="fas fa-play me-2"></i>
                            Start Quiz
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 15px;
        overflow: hidden;
    }
    
    .card-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
        border: none;
    }
    
    .alert-info {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        border: 1px solid #dee2e6;
        border-radius: 10px;
    }
    
    .btn-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        border-radius: 25px;
        transition: all 0.3s ease;
    }
    
    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(0,0,0,0.3);
    }
    
    .badge {
        border-radius: 8px;
        padding: 8px 12px;
    }
    
    .lead {
        font-size: 1.1rem;
        line-height: 1.6;
        color: #495057;
    }
</style>
