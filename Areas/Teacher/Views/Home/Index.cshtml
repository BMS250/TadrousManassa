@using TadrousManassa.Areas.Teacher.Models
@using TadrousManassa.Models
@using TadrousManassa.Utilities
@model AdminVM

<h1>Admin Page</h1>

<!-- Bootstrap Nav Tabs -->
<ul class="nav nav-tabs" id="adminTab" role="tablist">
    <li class="nav-item" role="presentation">
        <button class="nav-link active" id="settings-tab" data-bs-toggle="tab" data-bs-target="#settings" type="button" role="tab" aria-controls="settings" aria-selected="true">
            Settings
        </button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="video-tab" data-bs-toggle="tab" data-bs-target="#video" type="button" role="tab" aria-controls="video" aria-selected="false">
            Video Upload
        </button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="lectures-tab" data-bs-toggle="tab" data-bs-target="#lectures" type="button" role="tab" aria-controls="lectures" aria-selected="false">
            Lecture List
        </button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="codes-tab" data-bs-toggle="tab" data-bs-target="#codes" type="button" role="tab" aria-controls="codes" aria-selected="false">
            Lecture Codes
        </button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="reset-tab" data-bs-toggle="tab" data-bs-target="#reset" type="button" role="tab" aria-controls="reset" aria-selected="false">
            Reset Device ID
        </button>
    </li>
</ul>

<div class="tab-content" id="adminTabContent">
    <!-- Tab 1: Update Settings -->
    <div class="tab-pane fade show active p-3" id="settings" role="tabpanel" aria-labelledby="settings-tab">
        <form asp-action="UpdateSettings" method="post">
            <div class="mb-3">
                <label asp-for="CurrentYear" class="form-label">Current Year</label>
                <input asp-for="CurrentYear" class="form-control" value="@Model.CurrentYear" />
                <span asp-validation-for="CurrentYear" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="CurrentSemester" class="form-label">Current Semester</label>
                <select asp-for="CurrentSemester" class="form-control">
                    <option value="1" selected="@(Model.CurrentSemester == 1)">1</option>
                    <option value="2" selected="@(Model.CurrentSemester == 2)">2</option>
                </select>
                <span asp-validation-for="CurrentSemester" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Update Settings</button>
        </form>
    </div>

    <!-- Tab 2: Video Upload and Details -->
    <div class="tab-pane fade p-3" id="video" role="tabpanel" aria-labelledby="video-tab">
        <form asp-action="UploadVideo" method="post" enctype="multipart/form-data">
            <!-- File Input for Video -->
            <div class="mb-3">
                <label asp-for="Video" class="form-label">Choose Video</label>
                <input asp-for="Video" type="file" class="form-control" id="videoFile" name="Video" accept="video/*" />
                <span asp-validation-for="Video" class="text-danger"></span>
            </div>

            <!-- Video Details Inputs -->
            <div class="mb-3">
                <label asp-for="Name" class="form-label">Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Description" class="form-label">Description</label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <!-- Grade Selector using an Enum Select List -->
            <div class="form-floating mb-3">
                <select asp-for="Grade"
                        asp-items="Html.GetEnumSelectList<Grade>()"
                        class="form-control"
                        aria-required="true">
                    <option value="">Enter your Grade</option>
                </select>
                <label asp-for="Grade">Grade</label>
                <span asp-validation-for="Grade" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Unit" class="form-label">Unit</label>
                <input asp-for="Unit" class="form-control" />
                <span asp-validation-for="Unit" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Price" class="form-label">Price</label>
                <input asp-for="Price" class="form-control" type="number" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="SheetPath" class="form-label">Sheet Path</label>
                <input asp-for="SheetPath" class="form-control" />
                <span asp-validation-for="SheetPath" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="QuizPath" class="form-label">Quiz Path</label>
                <input asp-for="QuizPath" class="form-control" />
                <span asp-validation-for="QuizPath" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Upload Video</button>
        </form>
    </div>

    <!-- Tab 3: Lecture List -->
    <div class="tab-pane fade p-3" id="lectures" role="tabpanel" aria-labelledby="lectures-tab">
        <h3>Lecture List</h3>
        <div class="row">
            @foreach (var lecture in Model.Lectures)
            {
                <div class="col-md-4 mb-3">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <h5 class="card-title mb-0">@lecture.Name</h5>
                                <button class="btn btn-sm btn-outline-primary"
                                        type="button"
                                        data-bs-toggle="collapse"
                                        data-bs-target="#studentViews-@lecture.Id"
                                        aria-expanded="false"
                                        aria-controls="studentViews-@lecture.Id">
                                    Show Students
                                </button>
                            </div>
                            <div class="mt-2">
                                <small class="text-muted">Total Views: @lecture.ViewsCount</small><br>
                                <small class="text-muted">Unique Viewers: @Model.NoWatchers[lecture.Id]</small>
                            </div>

                            <!-- Collapsible Student Views -->
                            <div class="collapse" id="studentViews-@lecture.Id">
                                @if (Model.ViewsCountPerStudents != null &&
                               Model.ViewsCountPerStudents.TryGetValue(lecture.Id.ToString(), out var studentViews))
                                {
                                    <div class="mt-3 border-top pt-2">
                                        <h6 class="text-muted mb-2">Student Views:</h6>
                                        <div class="list-group">
                                            @foreach (var student in studentViews)
                                            {
                                                <div class="list-group-item d-flex justify-content-between align-items-center py-2">
                                                    <span>@student.Key</span>
                                                    <span class="badge bg-primary rounded-pill">@student.Value</span>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <div class="mt-3 text-center text-muted">
                                        No student views recorded
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <!-- Tab 4: Lecture Codes -->
    <div class="tab-pane fade p-3" id="codes" role="tabpanel" aria-labelledby="codes-tab">
        <h3>Lecture Access Codes</h3>
        <div class="row">
            @foreach (var lecture in Model.Lectures)
            {
                <div class="col-md-6 mb-3">
                    <div class="card shadow-sm">
                        <div class="card-body d-flex justify-content-between align-items-center">
                            <h5 class="card-title mb-0">@lecture.Name</h5>
                            <div>
                                <button type="button"
                                        class="btn btn-sm btn-outline-success"
                                        onclick="fetchCode('@lecture.Id')">
                                    Generate Code
                                </button>
                                <div id="codeResult-@lecture.Id" class="mt-2" style="display: none;">
                                    <div class="alert alert-primary d-inline-block mb-0 p-2">
                                        <span id="codeValue-@lecture.Id"></span>
                                        <button class="btn btn-sm btn-link text-black"
                                                onclick="copyCode('@lecture.Id')"
                                                title="Copy code">
                                            <i class="fas fa-copy"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Tab 5: Reset Device ID -->
    <div class="tab-pane fade p-3" id="reset" role="tabpanel" aria-labelledby="reset-tab">
        <h3>Reset User Device ID</h3>

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <form asp-action="ResetDeviceId" method="post">
            <div class="mb-3">
                <label for="userEmail" class="form-label">User Email</label>
                <input type="email" class="form-control" id="userEmail" name="userEmail" required />
                <div class="form-text">Enter the email of the user whose device ID needs to be reset.</div>
            </div>
            <button type="submit" class="btn btn-danger">Reset</button>
        </form>
    </div>
</div>

<!-- Add this script section -->
@section Scripts {
    <script>
        function fetchCode(lectureId) {
                fetch(`/Teacher/Home/GetCode?lectureId=${lectureId}`, {
                method: 'POST'
            })
            .then(response => response.json())
            .then(data => {
                const codeElement = document.getElementById(`codeValue-${lectureId}`);
                const resultDiv = document.getElementById(`codeResult-${lectureId}`);
                codeElement.textContent = data.code;
                resultDiv.style.display = 'block';
            })
            .catch(error => console.error('Error:', error));
        }

        function copyCode(lectureId) {
            const code = document.getElementById(`codeValue-${lectureId}`).textContent;
            navigator.clipboard.writeText(code).then(() => {
                // Show some feedback
                const toast = new bootstrap.Toast(document.getElementById('copyToast'));
                toast.show();
            });
        }
    </script>

    <!-- Add this toast for copy feedback -->
    <div class="toast position-fixed bottom-0 end-0 m-3" id="copyToast" role="alert" aria-live="assertive" aria-atomic="true" data-bs-delay="2000">
        <div class="toast-body bg-success text-white">
            Code copied to clipboard!
        </div>
    </div>
}