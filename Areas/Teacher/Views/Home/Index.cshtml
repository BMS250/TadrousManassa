@using TadrousManassa.Areas.Teacher.Models
@using TadrousManassa.Models
@using TadrousManassa.Utilities
@model AdminVM

<h1>Admin Page</h1>

<!-- Bootstrap Nav Tabs -->
<ul class="nav nav-tabs" id="adminTab" role="tablist">
    <li class="nav-item" role="presentation">
        <button class="nav-link active" id="settings-tab" data-bs-toggle="tab" data-bs-target="#settings" type="button" role="tab" aria-controls="settings" aria-selected="true">
            Settings
        </button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="video-tab" data-bs-toggle="tab" data-bs-target="#video" type="button" role="tab" aria-controls="video" aria-selected="false">
            Video Upload
        </button>
    </li>
</ul>

<div class="tab-content" id="adminTabContent">
    <!-- Tab 1: Update Settings -->
    <div class="tab-pane fade show active p-3" id="settings" role="tabpanel" aria-labelledby="settings-tab">
        <form asp-action="UpdateSettings" method="post">
            <div class="mb-3">
                <label asp-for="CurrentYear" class="form-label">Current Year</label>
                <input asp-for="CurrentYear" class="form-control" value="@Model.CurrentYear" />
                <span asp-validation-for="CurrentYear" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="CurrentSemester" class="form-label">Current Semester</label>
                <select asp-for="CurrentSemester" class="form-control">
                    <option value="1" selected="@(Model.CurrentSemester == 1)">1</option>
                    <option value="2" selected="@(Model.CurrentSemester == 2)">2</option>
                </select>
                <span asp-validation-for="CurrentSemester" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Update Settings</button>
        </form>
    </div>

    <!-- Tab 2: Video Upload and Details -->
    <div class="tab-pane fade p-3" id="video" role="tabpanel" aria-labelledby="video-tab">
        <form asp-action="UploadVideo" method="post" enctype="multipart/form-data">
            <!-- File Input for Video -->
            <div class="mb-3">
                <label asp-for="Video" class="form-label">Choose Video</label>
                <input asp-for="Video" type="file" class="form-control" id="videoFile" name="Video" accept="video/*" />
                <span asp-validation-for="Video" class="text-danger"></span>
            </div>

            <!-- Video Details Inputs -->
            <div class="mb-3">
                <label asp-for="Name" class="form-label">Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Description" class="form-label">Description</label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <!-- Grade Selector using an Enum Select List -->
            <div class="form-floating mb-3">
                <select asp-for="Grade"
                        asp-items="Html.GetEnumSelectList<Grade>()"
                        class="form-control"
                        aria-required="true">
                    <option value="">Enter your Grade</option>
                </select>
                <label asp-for="Grade">Grade</label>
                <span asp-validation-for="Grade" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Unit" class="form-label">Unit</label>
                <input asp-for="Unit" class="form-control" />
                <span asp-validation-for="Unit" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Price" class="form-label">Price</label>
                <input asp-for="Price" class="form-control" type="number" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="SheetPath" class="form-label">Sheet Path</label>
                <input asp-for="SheetPath" class="form-control" />
                <span asp-validation-for="SheetPath" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="QuizPath" class="form-label">Quiz Path</label>
                <input asp-for="QuizPath" class="form-control" />
                <span asp-validation-for="QuizPath" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Upload Video</button>
        </form>
    </div>
</div>
