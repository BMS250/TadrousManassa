@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<head>
    <link rel="stylesheet" href="~/css/loginPartial.css" />
</head>

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    if (User.IsInRole("Student"))
    {
        <li class="nav-item">
                <a class="nav-link text-dark" asp-controller="Profile" asp-action="Profile" title="Profile">Profile</a>
        </li>
    }
    <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index" title="Hello">Hello @User.Identity?.Name👋</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "Student" })">
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
