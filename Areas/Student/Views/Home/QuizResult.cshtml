@model TadrousManassa.Areas.Student.Models.QuizResultDTO

<div class="container mt-4">
    @if (Model.IsSuccess)
    {
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header bg-success text-white">
                        <h3 class="text-center mb-0">
                            <i class="fas fa-check-circle me-2"></i>
                            تم إرسال الاختبار بنجاح
                        </h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <h5><strong>اسم الاختبار:</strong></h5>
                                <p class="text-muted">@Model.QuizTitle</p>
                            </div>
                            @* <div class="col-md-6">
                                <h5><strong>وقت الإرسال:</strong></h5>
                                <p class="text-muted">@Model.SubmissionTime.ToString("yyyy-MM-dd HH:mm:ss")</p>
                            </div> *@
                        </div>
                        
                        <div class="row mt-3">
                            <div class="col-md-6">
                                <h5><strong>الدرجة:</strong></h5>
                                <p class="text-muted">@Model.Score من @Model.TotalScore</p>
                            </div>
                            <div class="col-md-6">
                                <h5><strong>حالة الاختبار:</strong></h5>
                                <span class="badge bg-success">مكتمل</span>
                            </div>
                            <div class="col-md-6">
                                <h5><strong>التقدير:</strong></h5>
                                <span class="badge bg-success">@(Model.IsSuccess ? "ناجح" : "راسب")</span>
                            </div>
                        </div>

                        @if (Model.Questions.Any())
                        {
                            <div class="mt-4">
                                <h5><strong>تفاصيل الإجابات:</strong></h5>
                                <div class="table-responsive">
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>رقم السؤال</th>
                                                <th>الإجابة المختارة</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var answer in Model.Questions)
                                            {
                                                <tr>
                                                    <td>@answer.QuestionText</td>
                                                    <td>@answer.SelectedChoiceId</td>
                                                    <td>@answer.IsCorrect</td>
                                                    <td>@answer.CorrectAnswerText</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        }

                        <div class="text-center mt-4">
                            <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                                <i class="fas fa-home me-2"></i>
                                العودة للصفحة الرئيسية
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header bg-danger text-white">
                        <h3 class="text-center mb-0">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            خطأ في إرسال الاختبار
                        </h3>
                    </div>
                    <div class="card-body">
                        @* <div class="alert alert-danger">
                            <h5><strong>الرسالة:</strong></h5>
                            <p>@Model.Message</p>
                        </div> *@
                        
                        <div class="text-center mt-4">
                            <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                                <i class="fas fa-home me-2"></i>
                                العودة للصفحة الرئيسية
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>